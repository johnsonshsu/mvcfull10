@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    var pageModel = (SessionService.IsMultiForm && SessionService.ActionNo != "List") ? (IPagedList)(Model.MasterModel) :
    (IPagedList)Model;
}

<div class="float-start page-info me-2">頁數:</div>
<div class="float-start me-2">
    @if (SessionService.IsMultiForm)
    {
        @Html.PagedListPager(pageModel, x => Url.Action(ActionService.Index,
                ActionService.Controller, new
                {
                    area = ActionService.Area,
                    pageMaster = x
                }))
    }
    else
    {
        @Html.PagedListPager((IPagedList)Model, x => Url.Action(ActionService.Index,
                ActionService.Controller, new
                {
                    area = ActionService.Area,
                    page = x
                }))
    }

</div>
<div class="float-start page-info">
    @ViewBag.PageInfo
</div>