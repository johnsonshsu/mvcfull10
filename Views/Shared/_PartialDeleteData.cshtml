<script>
    function DeleteData(id, data) {
        var message = '確認要刪除';
        if (!!data) {
            message += ' [' + data + '] ?'
        }
        else {
            message += '此筆資料?'
        }

        Swal.fire({
            title: "<strong>您確定要刪除?</strong>",
            text: message,
            icon: 'question',
            showCancelButton: true,
            focusConfirm: false,
            closeOnConfirm: false,
            confirmButtonText: '<i class="fas fa-check fa-lg pe-2"></i>確定',
            cancelButtonText: '<i class="fas fa-undo fa-lg pe-2"></i>取消',
        }).then(function (result) {
            if (result.isConfirmed) {
                $.ajax({
                    url: "@Url.Action(ActionService.Delete, ActionService.Controller, new { area = ActionService.Area })",
                    data: { "id": id },
                    type: "POST",
                    dataType: "json",
                }).done(function (value) {
                    if (value.Mode == true) {
                        Swal.fire({
                            title: "<strong>提示訊息</strong>",
                            text: value.Message,
                            icon: 'success',
                            timer: 3000,
                            showCancelButton: false,
                            focusConfirm: true,
                            confirmButtonText: '<i class="fas fa-check fa-lg pe-2"></i>確定',
                        }).then(function (result) {
                            location.reload(true);
                            tr.hide();
                        });
                    }
                    else {
                        Swal.fire('錯誤訊息', value.Message, 'error');
                    }
                }).fail(function (err) {
                    Swal.fire('錯誤訊息', err, 'error');
                    console.log(err);
                });
            }
        });
    }
</script>